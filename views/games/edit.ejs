<% include ../partials/header %>

<div style="background:#e9ecef;">
  <b>Navigation</b> - &nbsp; <a href="http://localhost:3001" style="text-decoration: none;">Home</a> /
  <a href="../../games" style="text-decoration: none;">Games</a> /
  <button type="submit" class="btn btn-warning">Edit</button>
  <a href="/games/new">
  <button type="submit" class="btn btn-success" style="position:relative;left:66%;">New Game</button>
  </a>
</div><br/>

<section>
  <form action="/games/<%= game.id %>" method="post" novalidate>
    <fieldset>
      <legend>Game Information</legend>

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="game_name" name="name" value="<%= game.name %>" placeholder="PUBG" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="game_description" name="description" value="<%= game.description %>" placeholder="action game, online, players unknown battlegrounds" required>
      </div>

      <div class="form-group">
        <label for="features">Features</label>
        <input type="text" class="form-control" id="game_features" name="features" value="<%= game.features %>" placeholder="action, adventure, etc." required>
      </div>

      <div class="form-group">
        <label for="lengthOfGamePlay">Length Of GamePlay</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">Minutes</div>
          </div>

          <input type="number" class="form-control" id="game_lengthOfGamePlay" name="lengthOfGamePlay" value="<%= game.lengthOfGamePlay %>" placeholder="30" step="1.0" min="15" max="180" required>
        </div>
      </div>

      <div class="form-group">
        <label for="noPlayers">Number of Players</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">#</div>
          </div>

          <input type="number" class="form-control" id="game_noPlayers" name="noPlayers" value="<%= game.noPlayers %>" placeholder="4" step="1.0" min="1" max="5" required>
        </div>
      </div>
    </fieldset>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Update Game</button>
    </div>
  </form>
</section>

<% include ../partials/footer %>
